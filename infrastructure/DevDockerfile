# Stage 1: Runtime Base
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 80

ENV ASPNETCORE_URLS=http://+:8080

RUN apt-get update && apt-get install -y \
    tzdata \
    libgssapi-krb5-2 \
    nginx \
    && rm -rf /var/lib/apt/lists/*

# Stage 2: SDK Build
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY ["./src/backend/TaskTrackerServer2/TaskTrackerServer2.csproj", "TaskTrackerServer2/"]
RUN dotnet restore "TaskTrackerServer2/TaskTrackerServer2.csproj"

COPY ["./src/backend/TaskTrackerServer2/.", "TaskTrackerServer2/"]

WORKDIR "/src/TaskTrackerServer2"
RUN dotnet publish "TaskTrackerServer2.csproj" -c Debug -o /app/publish /p:UseAppHost=false

# Stage 3: Final
FROM base AS final
WORKDIR /app

# Copy published .NET output
COPY --from=build /app/publish .

# Copy static frontend files
COPY --chown=www-data:www-data ./src/html /var/www/html

# Configure nginx
COPY ./infrastructure/nginx-dev.conf /etc/nginx/sites-available/default

# Startup script
COPY ./infrastructure/start.sh /start.sh
RUN chmod +x /start.sh

ENV DB_HOST_IP=100.100.104.47
ENV DB_PORT=5432
ENV DB_USER=postgres
ENV DB_NAME=TaskTracker2
ENV DB_PASS=1peo2HHeel@
ENV ASPNETCORE_ENVIRONMENT=Development

ENTRYPOINT ["/start.sh"]
